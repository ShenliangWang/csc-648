extends layout

block content
  .container

    // Page Heading
    br
    br

    if(search)
      h1.my-4
        | Showing #{resultsFound} results
          
      .row
        for listing in results
          .col-lg-4.col-sm-6.portfolio-item
            .card.h-100
              a(href='#')
                img.card-img-top(src="images/listing_id_" + listing.id + "/1.jpg", alt='')                    
              .card-body
                h4.card-title
                  a(href='listing')= listing.address                       
                p.card-text= listing.city
              .card-footer
    else
      p No listings found. Check your Search query for spelling or format.

  // Pagination
  ul.pagination.justify-content-center
    li.page-item
      a.page-link(href='#', aria-label='Previous')
        span(aria-hidden='true') &laquo;
        |             
        span.sr-only Previous
    |             
    li.page-item
      a.page-link(href='#') 1
    |             
    li.page-item
      a.page-link(href='#') 2
    |             
    li.page-item
      a.page-link(href='#') 3
    |             
    li.page-item
      a.page-link(href='#', aria-label='Next')
        span(aria-hidden='true') &raquo;
        |             
        span.sr-only Next
