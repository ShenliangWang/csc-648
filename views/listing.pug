  // Contact agent modal
  #ContactAgentModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='contactAgentModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#contactAgentModalLabel.modal-title Input Messages:
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          .col.form-group
            .modal-body
            input.form-control(type='text', placeholder='Enter your full name')
            br
            input.form-control(type='text', placeholder='Enter your email or phone number')
            br
            .form-group
              textarea#exampleFormControlTextarea1.form-control(placeholder='Type your message here...', rows='5')
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
          // link to agent's message box
          button.btn.btn-primary(data-toggle='modal', data-target='#MessageSentModal', type='button', data-dismiss='modal') Send
  // Message Sent Modal
  #MessageSentModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='MessageSentModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Message Sent!
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          | Congratulations! Your message has been sent to the agent of this property. Expect a reply within next 4-5 business days.
        .modal-footer
          button.btn.btn-primary(type='button', data-dismiss='modal') Done
