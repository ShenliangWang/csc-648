    // Portfolio Item Row
    .row
      .w3-content.w3-display-container
        // link image to database
        img.mySlides(src='images/listing_id_1/1.jpg', style='width:50%')
        img.mySlides(src='https://static.pexels.com/photos/276724/pexels-photo-276724.jpeg', style='width:40%')
        img.mySlides(src='https://static.pexels.com/photos/189333/pexels-photo-189333.jpeg', style='width:40%')
        img.mySlides(src='https://static.pexels.com/photos/271634/pexels-photo-271634.jpeg', style='width:40%')
        img.mySlides(src='https://static.pexels.com/photos/271643/pexels-photo-271643.jpeg', style='width:40%')
        button.w3-button.w3-black.w3-display-left(onclick='plusDivs(-1)') &#x276E;
        button.w3-button.w3-black.w3-display-right(onclick='plusDivs(1)') &#x276F;
      script.
        var slideIndex = 1;
        showDivs(slideIndex);
        function plusDivs(n) {
        showDivs(slideIndex += n);
        }
        function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) {
        slideIndex = 1
        }
        if (n < 1) {
        slideIndex = x.length
        }
        for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
        }
      .col-md-4
        // map
        #map
        script.
          function initMap() {
          var uluru = {
          lat: -25.363,
          lng: 131.044
          };
          var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: uluru
          });
          var marker = new google.maps.Marker({
          position: uluru,
          map: map
          });
          }
        script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDGf7v2z21y1mcjDcD4ARc7M6jmKdDYdj4&callback=initMap')
        // end map api
